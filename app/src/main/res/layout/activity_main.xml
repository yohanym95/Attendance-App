<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/teacherMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvteacherMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textSize="25dp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/studentMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvstudentMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textSize="25dp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/teacherAttendanceMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvteacherAttendanceMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher Attendance"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textSize="25dp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/studentAttendanceMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvstudentAttendanceMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Attendance"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textSize="25dp"/>

    </android.support.v7.widget.CardView>



</LinearLayout>